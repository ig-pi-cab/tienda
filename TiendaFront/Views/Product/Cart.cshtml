@model TiendaFront.Models.Cart

<h2>Shopping Cart</h2>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Marca</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.id</td>
                <td>@product.nombre</td>
                <td>@product.precio.ToString("C2")</td>
                <td>@product.marca.nombre</td>
                <td>@product.categoria.nombre</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Products.Count > 0)
{
    <p>Total Price: @Model.GetTotalPrice().ToString("C2")</p>
}
else
{
    <p>No products in the cart.</p>
}
